{
  "name": "kaiji-ai",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev:backend": "npm --workspace apps/backend run dev",
    "dev:frontend": "npm --workspace apps/frontend run dev -- --host 0.0.0.0 --port 5173",
    "build:backend": "npm --workspace apps/backend run build",
    "build:frontend": "npm --workspace apps/frontend run build",
    "start:backend": "npm --workspace apps/backend run start",
    "start:frontend": "npm --workspace apps/frontend run preview",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm --workspace apps/backend run lint",
    "lint:frontend": "npm --workspace apps/frontend run lint",
    "lint:fix": "npm run lint:backend:fix && npm run lint:frontend:fix",
    "lint:backend:fix": "npm --workspace apps/backend run lint:fix",
    "lint:frontend:fix": "npm --workspace apps/frontend run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.2.5",
    "typescript-eslint": "^8.46.3"
  }
}
