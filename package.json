{
  "name": "kaiji-ai",
  "private": true,
  "workspaces": [
    "apps/backend"
  ],
  "scripts": {
    "dev:backend": "npm --workspace apps/backend run dev",
    "build:backend": "npm --workspace apps/backend run build",
    "start:backend": "npm --workspace apps/backend run start",
    "lint": "npm --workspace apps/backend run lint",
    "lint:fix": "npm --workspace apps/backend run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5"
  }
}
