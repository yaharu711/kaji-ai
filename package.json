{
  "name": "kaiji-ai",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev:backend": "npm --workspace apps/backend run dev",
    "dev:frontend": "npm --workspace apps/frontend run dev -- --host 0.0.0.0 --port 5173",
    "build:backend": "npm --workspace apps/backend run build",
    "build:frontend": "npm --workspace apps/frontend run build",
    "start:backend": "npm --workspace apps/backend run start",
    "start:frontend": "npm --workspace apps/frontend run preview",
    "lint": "npm --workspace apps/backend run lint",
    "lint:fix": "npm --workspace apps/backend run lint:fix",
    "lint:frontend": "npm --workspace apps/frontend run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5"
  }
}
