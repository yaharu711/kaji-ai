{
  "name": "@kaiji-ai/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/entry.edge.js",
  "scripts": {
    "dev": "tsx watch ./src/entry.local.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsx ./src/entry.local.ts",
    "migration:gen": "drizzle-kit generate --config ./drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "migrate:test": "NODE_ENV=test drizzle-kit migrate --config ./drizzle.config.ts",
    "build:vercel": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@auth/core": "^0.41.1",
    "@auth/drizzle-adapter": "^1.11.1",
    "@hono/auth-js": "^1.1.0",
    "@hono/node-server": "^1.8.1",
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.15.6",
    "typescript": "^5.4.2",
    "vitest": "^1.6.0"
  }
}
