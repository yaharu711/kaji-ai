{
  "name": "@kaiji-ai/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/entry.local.js",
  "scripts": {
    "dev": "tsx watch ./src/entry.local.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/entry.local.js",
    "build:vercel": "tsc -p tsconfig.json && cp dist/entry.vercel.js dist/index.js",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\" --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.1",
    "hono": "^4.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "tsx": "^4.15.6",
    "typescript": "^5.4.2",
    "vitest": "^1.6.0"
  }
}
